# EVENTS Booking Widget - Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL Database (Neon recommended)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# JWT Authentication (min 32 chars)
JWT_SECRET=your-secure-random-secret-min-32-chars

# Admin Credentials (password MUST be bcrypt hashed)
# Generate hash: npx bcrypt-cli hash "yourpassword"
ADMIN_USERNAME=admin
ADMIN_PASSWORD=$2a$10$your-bcrypt-hash-here

# Redis for rate limiting (Upstash recommended)
# Without this, rate limiting uses in-memory (single instance only)
REDIS_URL=redis://default:password@host:6379

# Sentry for error tracking
SENTRY_DSN=https://key@sentry.io/project

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
